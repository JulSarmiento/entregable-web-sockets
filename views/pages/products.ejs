<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

    <title>Lista de Productos</title>
  </head>
  <body>
    <style>
      .table-config{
        margin: 30px auto;
      }
    
    
      .title-config{
        margin: 20px auto;
      }
    </style>
    
    <div class="container text-center title-config">
      <h1>Lista de Productos</h1>
    </div>
    
    <div class="container table-config text-center">
      <div class="row">
        <div class="col">
          <% if(products.length > 0) { %>
            <table class="table table-hover table-dark">
    
              <thead>
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Nombre</th>
                  <th scope="col">Precio</th>
                  <th scope="col">Foto</th>
                </tr>
              </thead>
              <tbody>
                <% products.forEach(product => { %>
                <tr>
                  <th scope="row"><%= product.id %></th>
                  <td><%= product.productName %></td>
                  <td><%=new Intl.NumberFormat('en-US', {style: 'currency', currency: 'USD'}).format(product.productPrice )%></td>
                  <td><img src="<%= product.thumbnail %>" height="40" width="40" alt=""></td>
                </tr>
                <% }) %>
    
              </tbody>
    
            </table>
    
          <% } else { %>
            <div class="alert alert-warning" role="alert">
              No hay productos para mostrar.
            </div>
          <% }%> 
        </div>
      </div>
    
      <a href="/products">Agregar mas productos</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script src="/main.js"></script>
  </body>
</html>